<h2>Product List</h2>

<div class="product">
  <%= link_to("add product", new_admin_product_path, class: "btn btn-primary")%>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <th>#</th>
      <th>品名</th>
      <th>叙述</th>
      <th>库存</th>
      <th>价格</th>
      <th>图片</th>
      <th>选项</th>
      <th>创建时间</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>#</td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td>
          <% if product.image.present? %>
            <span>目前商品图</span>
            <%= image_tag(product.image.thumb.url) %>
          <% end %>
        </td>
        <td>
          <%= link_to("edit", edit_admin_product_path(product),  class: "btn btn-primary") %>|
          <%= link_to("delete", admin_product_path(product), :method => :delete, class: "btn btn-primary") %>
        </td>
        <td>
          <%= product.created_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
