<h2>Product List</h2>

<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("add product", new_admin_product_path, class: "btn btn-primary btn-sm")%>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <th>#</th>
      <th width='220'>图片</th>
      <th>品名</th>
      <th>价格</th>
      <th >选项</th>
      <th>创建时间</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to("edit", edit_admin_product_path(product),  class: "btn btn-primary") %>|
          <%= link_to("delete", admin_product_path(product), :method => :delete, class: "btn btn-primary") %>
        </td>
        <td>
          <%= product.created_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

